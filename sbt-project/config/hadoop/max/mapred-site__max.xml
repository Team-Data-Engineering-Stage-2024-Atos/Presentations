<configuration>
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>master-namenode:10020</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>master-namenode:19888</value>
    </property>
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>4096</value> <!-- Memory allocation for mappers -->
    </property>
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>8192</value> <!-- Memory allocation for reducers -->
    </property>
    <property>
        <name>mapreduce.task.io.sort.mb</name>
        <value>1024</value> <!-- Memory buffer for sorting -->
    </property>
    <property>
        <name>mapreduce.reduce.shuffle.parallelcopies</name>
        <value>50</value> <!-- Parallel copies for reduce shuffle -->
    </property>
    <property>
        <name>mapreduce.task.io.sort.factor</name>
        <value>100</value> <!-- Number of streams merged during sort -->
    </property>
</configuration>
